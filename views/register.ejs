<div class="login-card">
  <h2 class="title">Daftar</h2>
  <p class="subtitle">Buat akun baru</p>
  <form method="post" action="/register" data-ajax="true">
    <input class="form-control mb-2" name="email" type="email" placeholder="Email" required>
    <input class="form-control mb-2" name="phone" type="text" placeholder="Nomor HP (08xxxx)" required>
    <input class="form-control mb-2" name="password" type="password" placeholder="Password" required>
    <input class="form-control mb-2" name="licenseKey" placeholder="License (opsional)">
    <button class="btn btn-primary w-100 ripple">Daftar</button>
  </form>
  <div class="tos"><a href="/login">Sudah punya akun? Login</a></div>
</div>
